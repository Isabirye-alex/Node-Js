<!-- views/orderConfirmation.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Confirmation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f9f9f9;
            color: #333;
            padding: 0;
            margin: 0;
        }

        .container {
            max-width: 600px;
            margin: auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
        }

        .header {
            background: #4a90e2;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .order-item {
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
            display: flex;
            align-items: center;
        }

        .order-item img {
            max-width: 60px;
            margin-right: 15px;
            border-radius: 5px;
        }

        .order-item-details {
            flex: 1;
        }

        .footer {
            text-align: center;
            font-size: 14px;
            color: #777;
            margin-top: 20px;
        }

        .footer a {
            color: #4a90e2;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h2>Thanks for your order, {{receiverName}}!</h2>
        </div>

        <p>Here are the details of your recent purchase from <strong>{{company}}</strong>:</p>

        {{#each orderItems}}
        <div class="order-item">
            <img src="{{this.image}}" alt="{{this.name}}" />
            <div class="order-item-details">
                <strong>{{this.name}}</strong><br />
                Quantity: {{this.quantity}}<br />
                Price: ${{this.price}}
            </div>
        </div>
        {{/each}}

        <p><strong>Total Amount:</strong> ${{total}}</p>

        <div class="footer">
            <p>&copy; {{year}} {{company}}. All rights reserved.</p>
            <p>Need help? <a href="mailto:{{supportEmail}}">{{supportEmail}}</a></p>
        </div>
    </div>
</body>

</html>